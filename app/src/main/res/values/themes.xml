<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Widget.App.MaterialButtonCustom</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="animationInitialColor">@color/yellow</item>
        <item name="animationFinalColor">@color/red</item>
    </style>

    <!-- Application theme. -->
    <style name="Theme.App" parent="Theme.App.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccentCustom">@android:color/holo_orange_dark</item>
        <item name="rippleColorCustom">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.App.MaterialButtonCustom" parent="">
        // the button Tint color
        <item name="colorPrimary">?attr/colorAccentCustom</item>
        // the disabled Tint color
        <item name="colorOnSurface">@android:color/holo_blue_light</item>
    </style>

</resources>