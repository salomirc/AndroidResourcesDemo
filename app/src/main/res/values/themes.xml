<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Widget.App.MaterialButtonCustom</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppThemeBase">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccentCustom">@color/colorCustomButton</item>
        <item name="rippleColorCustom">@android:color/holo_blue_dark</item>
    </style>

    <style name="Widget.App.MaterialButtonCustom" parent="Widget.MaterialComponents.Button">
        // the ripple color
        <item name="rippleColor">?attr/rippleColorCustom</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.MaterialButtonCustom</item>
    </style>

    <style name="ThemeOverlay.App.MaterialButtonCustom" parent="">
        // the button Tint color
        <item name="colorPrimary">?attr/colorAccentCustom</item>
        // the disabled Tint color
        <item name="colorOnSurface">@color/colorDisabled</item>
    </style>

    <style name="MyCustomButtonStyle">
        <item name="android:textAppearance">@style/ButtonEmphasisTextAppearance</item>
        <item name="android:textColor">#FFEB3B</item>
    </style>

    <style name="ButtonEmphasisTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonEmphasisTextAppearance.Large">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextViewEmphasisTextAppearance" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent.Round">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="test" parent="@android:style/TextAppearance.Material">

    </style>

</resources>